<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <style>
    img {
      background-color: aliceblue;

      transition: 0.5s;
    }
    img:hover {
      background-color: bisque;

      box-shadow: 0px 4px 11px 11px rgb(233, 231, 231);
    }
  </style>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="container" style="position: relative">
      <img
        data-id="<%= blog.id  %>"
        src="/images/trashicon.svg"
        alt="delete icon"
        style="
          width: 90px;
          position: absolute;
          top: 8rem;
          right: 100px;
          cursor: pointer;
          border-radius: 50%;
        "
      />
      <h2 style="padding: 8rem 0; font-size: 2rem; text-transform: capitalize">
        <%= blog.title %>
      </h2>
      <P style="line-height: 1.5; font-size: 1.25rem; text-indent: 30px"
        ><%= blog.body %></P
      >
    </div>
    <script>
      let im = document.querySelector("img");
      let id = im.dataset.id;
      im.addEventListener("click", (e) => {
        fetch(`/blogs/${id}`, { method: "DELETE" })
          .then((res) => {
            window.location.href = "/blogs";
          })
          .catch((err) => console.log(err));
      });
    </script>
  </body>
</html>
